/* pages/index/index.wxss */
page {
  height: 100vh;
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.container {
  min-height: 100vh;
  padding: 20rpx;
  position: relative;
}

/* 用户信息区域 */
.user-section {
  margin-bottom: 30rpx;
}

.user-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-section {
  text-align: center;
  padding: 60rpx 0;
}

.login-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 24rpx 60rpx;
  margin-bottom: 20rpx;
}

.login-btn.loading {
  opacity: 0.6;
}

.login-btn:active {
  transform: scale(0.98);
}

.login-tips {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 统计数据区域 */
.stats-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stats-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  flex: 1;
  margin: 0 10rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-card:first-child {
  margin-left: 0;
}

.stats-card:last-child {
  margin-right: 0;
}

.stats-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 快捷操作区域 */
.actions-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.actions-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.action-item {
  width: 48%;
  background: rgba(76, 175, 80, 0.05);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(76, 175, 80, 0.1);
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.action-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 服务介绍区域 */
.service-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 150rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.service-card {
  padding: 0;
}

.service-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.service-item:last-child {
  margin-bottom: 0;
}

.service-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.service-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.service-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 底部悬浮按钮 */
.floating-actions {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
}

.float-btn {
  background: linear-gradient(135deg, #ff6b35, #ff8a65);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 53, 0.4);
}

.float-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }

  .stats-section {
    margin: 0 -5rpx 20rpx;
  }

  .stats-card {
    margin: 0 5rpx;
    padding: 20rpx 15rpx;
  }

  .stats-number {
    font-size: 36rpx;
  }

  .action-item {
    width: 100%;
    margin-bottom: 15rpx;
  }
}