/* pages/demand/submit.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.page-header {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.form-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.label.required::after {
  content: ' *';
  color: #ff4d4f;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.input:focus {
  border-color: #4CAF50;
  background: white;
}

.picker {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 84rpx;
  box-sizing: border-box;
}

.picker.placeholder {
  color: #999;
}

.price-section {
  margin-top: 30rpx;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
}

.price-section.show {
  opacity: 1;
  transform: translateY(0);
}

.price-card {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

.price-label {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.price-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.price-note {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.submit-section {
  margin-top: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border: none;
  border-radius: 12rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 96rpx;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
}

.submit-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn:active:not(.disabled) {
  transform: scale(0.98);
}

.reset-section {
  text-align: center;
  margin-top: 20rpx;
}

.reset-text {
  font-size: 26rpx;
  color: #666;
  text-decoration: underline;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx 60rpx;
  text-align: center;
}

.loading-content text {
  font-size: 28rpx;
  color: #333;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }

  .page-header {
    padding: 30rpx 20rpx;
  }

  .title {
    font-size: 32rpx;
  }

  .subtitle {
    font-size: 26rpx;
  }

  .form-section {
    padding: 20rpx;
  }
}