/* pages/demand/list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.page-header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.demand-list {
  margin-bottom: 20rpx;
}

.demand-item {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.demand-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.demand-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.demand-info {
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.grade {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.subject {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-right: 20rpx;
}

.price {
  font-size: 26rpx;
  color: #ff6b35;
  background: rgba(255, 107, 53, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.demand-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-following {
  background: #cce5ff;
  color: #004085;
}

.status-matched {
  background: #d4edda;
  color: #155724;
}

.status-closed {
  background: #f8d7da;
  color: #721c24;
}

.status-default {
  background: #e9ecef;
  color: #6c757d;
}

.demand-detail {
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.icon {
  font-size: 24rpx;
  margin-right: 10rpx;
  width: 30rpx;
}

.text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.demand-hint {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.demand-hint text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-btn {
  background: #4CAF50;
  color: white;
  border-radius: 25rpx;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  line-height: 1;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-content {
  text-align: center;
}

.loading-content text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
}

.no-more text {
  font-size: 24rpx;
  color: #ccc;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }

  .demand-item {
    padding: 20rpx;
  }

  .demand-info {
    flex-direction: column;
    align-items: flex-start;
  }

  .grade, .subject, .price {
    margin-right: 0;
    margin-bottom: 10rpx;
  }
}